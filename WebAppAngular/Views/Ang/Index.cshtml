
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angJs.js"></script>
<div ng-app="myModule" ng-controller="empController">
    <div>
        {{message}}
    </div>
    <table>
        <tr>
            <td>Name</td>
            <td>
                <input type="text" ng-model="employee.name" />
            </td>
        </tr>
        <tr>
            <td>address</td>
            <td>
                <input type="text" ng-model="employee.address" />
            </td>
        </tr>
        <tr>
            <td>position</td>
            <td>
                <input type="text" ng-model="employee.position" />
            </td>
        </tr>

    </table>
    <br />
    <br />
    <div>
        Name : {{ employee.name }}
    </div>
    <div>
        address : {{ employee.address }}
    </div>
    <div>
        position : {{ employee.position }}
    </div>
    <div>
        Logo name = {{imagedesc.imagename}}
    </div>
    <div>
        <img ng-src="{{imagedesc.logosrc}}" alt="{{imagedesc.imagename}}" />
    </div>
    <br />
    <br />
    <table class="table">
        <thead>
            <tr>
                <td>Department Name</td>
                <td>Location</td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="department in departments">
                <td>{{ department.departmentname }}</td>
                <td>{{ department.location }}</td>
            </tr>
        </tbody>
    </table>
    <br />
    <ul>
        <li ng-repeat="country in countries" ng-init="parentIndex = $index">
            {{country.name}} - index: {{$index}}
            <ul>
                <li ng-repeat="city in country.cities">
                    {{city.name}} - Parent Index {{parentIndex}} - index: {{$index}}
                </li>
            </ul>
        </li>
    </ul>
    <br />
    <br />
    <table cellpadding="12" class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>President</td>
                <td>Country</td>
                <td>Likes</td>
                <td>Dislike</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="president in presidents">
                <td>{{ president.name}}</td>
                <td>{{ president.origin}}</td>
                <td>{{ president.like}}</td>
                <td>{{ president.dislike}}</td>
                <td>
                    <input type="button" class="btn btn-primary" value="Like" ng-click="incrementlikes(president)" />
                    <input type="button" class="btn btn-danger" value="Dislike" ng-click="incrementdislikes(president)" />
                </td>
            </tr>
        </tbody>
    </table>
</div>

